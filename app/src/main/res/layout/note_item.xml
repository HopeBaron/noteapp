<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                   android:layout_height="wrap_content"
                                                   android:layout_width="match_parent"
                                                   android:padding="7dp"
                                                   android:layout_margin="2dp"
                                                   android:orientation="vertical">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:padding="10dp"
            tools:layout_editor_absoluteY="2dp" card_view:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/card_title_text"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:layout_weight="0.3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"/>
            <TextView
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:id="@+id/card_content_text"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="0.3"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                    android:layout_marginStart="4dp"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:textSize="14sp"
                    android:id="@+id/card_date_text"
                    card_view:drawableStartCompat="@drawable/ic_calender_svgrepo_com"
                    android:drawablePadding="5dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintVertical_bias="0.352"
                    card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
